<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="0dp"
    android:layout_marginRight="0dp"
    android:layout_marginTop="10dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txt_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="26dp"
        android:text="From:"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/txt_start_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/txt_start"
        android:layout_marginLeft="10dp"
        android:layout_toEndOf="@+id/txt_start"
        android:layout_toRightOf="@+id/txt_start"
        android:text="Boarding Station"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/txt_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txt_start"
        android:layout_alignStart="@+id/txt_start"
        android:layout_below="@+id/txt_start"
        android:layout_marginTop="10dp"
        android:text="To:"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/txt_end_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txt_start_edit"
        android:layout_alignStart="@+id/txt_start_edit"
        android:layout_below="@+id/txt_start_edit"
        android:layout_marginTop="10dp"
        android:text="Alighting Station"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/label_mode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txt_start"
        android:layout_alignStart="@+id/txt_start"
        android:layout_below="@+id/txt_end"
        android:layout_marginTop="10dp"
        android:text="Mode:"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/tv_mode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txt_end_edit"
        android:layout_alignStart="@+id/txt_end_edit"
        android:layout_below="@+id/txt_end_edit"
        android:layout_marginTop="10dp"
        android:text="-"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/label_gps_accuracy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/label_mode"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:text="GPS Accuracy:"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/tv_gps_accuracy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_alignBaseline="@id/label_gps_accuracy"
        android:layout_toRightOf="@+id/label_gps_accuracy"
        android:text="-"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/label_wifi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/label_gps_accuracy"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:text="WiFi Detection:"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/tv_wifi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_gps_accuracy"
        android:layout_alignLeft="@id/tv_gps_accuracy"
        android:layout_alignBaseline="@id/label_wifi"
        android:layout_toRightOf="@+id/label_wifi"
        android:text="-"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/txt_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/txt_start_edit"
        android:layout_marginLeft="60dp"
        android:layout_marginStart="37dp"
        android:layout_toEndOf="@+id/txt_start_edit"
        android:layout_toRightOf="@+id/txt_start_edit"
        android:text="ETA:"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/txt_time_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/txt_time"
        android:layout_marginLeft="40dp"
        android:layout_toEndOf="@+id/txt_time"
        android:layout_toRightOf="@+id/txt_time"
        android:text="-"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/txt_dist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txt_time"
        android:layout_alignStart="@+id/txt_time"
        android:layout_alignTop="@+id/txt_end_edit"
        android:text="Distance:"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/txt_dist_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txt_time_edit"
        android:layout_alignStart="@+id/txt_time_edit"
        android:layout_alignTop="@+id/txt_dist"
        android:text="-"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <Button
        android:id="@+id/stoptrackingbtn2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/label_wifi"
        android:layout_centerHorizontal="true"
        android:text="STOP TRACKING"
        android:textSize="15dp" />

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/stoptrackingbtn2"
        android:layout_marginTop="0dp"
        android:clickable="false"
        android:enabled="true" />

</RelativeLayout>